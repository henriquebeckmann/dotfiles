configuration {
	display-drun:    "drun: ";
	display-run:     "run: ";
	display-window:  "window: ";
	show-icons:      false;
}

#window {
    anchor:     north;
    location:   north;
    width:      100%;
	border: 	0px;
    padding:    1px;
    children:   [ horibox ];
}

#horibox {
    orientation: horizontal;
    children:   [ prompt, entry, listview ];
}

#mainbox {
	border:  0;
	 padding: 0;
}

#prompt {
	expand: false;
}

#listview {
    layout:     horizontal;
    spacing:    5px;
    lines:      100;
}

#entry {
    expand:     false;
    width:      10em;
}

#element {
    padding: 0px 7px;
}
